{
  "root": true,
  "env": {
    "node": true
  },
  "extends": [
    "plugin:vue/recommended",
    "eslint:recommended"
  ],
  "parserOptions": {
    "parser": "@babel/eslint-parser",
    "requireConfigFile": false,
    "ecmaVersion": 2021
  },
  "rules": {
    "indent": [
      "warn",
      4
    ],
    "no-mixed-spaces-and-tabs": "error",
    "no-tabs": "off",
    "vue/html-indent": [
      "warn",
      2
    ]
  }
}